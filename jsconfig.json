{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "esnext",
    "module": "ES6",
    "moduleResolution": "node",
    "checkJs": true,
    "esModuleInterop": true, // force import
    "allowSyntheticDefaultImports": true, // force import
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
