{
  "name": "quichify",
  "version": "0.1.0",
  "main": "./dist/quichify-lib.umd.js",
  "module": "./dist/quichify-lib.es.js",
  "browser": "./dist/quichify-lib.cjs.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/quichify-lib.es.js",
      "require": "./dist/quichify-lib.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 5050",
    "test:unit": "vitest --environment jsdom",
    "test:e2e": "start-server-and-test preview http://127.0.0.1:5050/ 'cypress open'",
    "test:e2e:ci": "start-server-and-test preview http://127.0.0.1:5050/ 'cypress run'",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "lib:build": "vite build --config vite-lib.config.js",
    "lib:publish": "npm run lib:build && echo '\n\nStart npm publishing\n' && npm publish --access public",
    "lib:publish:patch": "npm version patch && npm run lib:publish",
    "lib:publish:minor": "npm version minor && npm run lib:publish",
    "lib:publish:major": "npm version major && npm run lib:publish"
  },
  "dependencies": {
    "vue": "^3.2.33"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.0",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vue/eslint-config-airbnb": "^6.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/test-utils": "^2.0.0-rc.20",
    "autoprefixer": "^10.4.7",
    "cypress": "^9.5.4",
    "eslint": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^8.2.0",
    "jsdom": "^19.0.0",
    "postcss": "^8.4.14",
    "prettier": "^2.5.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.24",
    "vite": "^2.9.5",
    "vitest": "^0.9.3"
  }
}
